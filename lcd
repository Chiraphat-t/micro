
lcd
คำสั่ง,คำอธิบาย
lcd.print(""Text"")  พิมพ์ข้อความ
lcd.setCursor(0, 1)  ย้ายไปแถวที่ 2  //lcd.setCursor(15, 1);
lcd.clear()  ลบทุกอย่างบนจอ
lcd.display()  เปิดการแสดงผลตัวอักษร
lcd.noDisplay()  ซ่อนตัวอักษร (แต่ข้อมูลยังอยู่)

lcd.begin(): เริ่มต้นการทำงานของหน้าจอ (ต้องใส่ใน setup)
lcd.backlight(): เปิดไฟพื้นหลังหน้าจอ
lcd.noBacklight(): ปิดไฟพื้นหลัง (ช่วยประหยัดไฟ)
lcd.clear(): ล้างหน้าจอทั้งหมดและเลื่อนเคอร์เซอร์ไปที่มุมซ้ายบน
lcd.home(): เลื่อนเคอร์เซอร์กลับไปที่ (0, 0) โดยไม่ล้างข้อความเดิม
lcd.scrollDisplayLeft(); //lcd.scrollDisplayRight();

2. การควบคุมตำแหน่ง (Positioning)

#include <LCD_I2C.h>
LCD_I2C lcd(0x27, 16, 2);

void setup() {
    lcd.begin();
    lcd.backlight();
    
    // พิมพ์ข้อความที่ยาวกว่า 16 ตัวอักษร
    lcd.setCursor(0, 0);
    lcd.print("Welcome to ESP32 Project with LCD16x2 I2C!");
}

void loop() {
    // สั่งให้หน้าจอเลื่อนไปทางซ้าย 1 ช่อง
    lcd.scrollDisplayLeft();
    
    // หน่วงเวลา 300ms (ยิ่งน้อย ยิ่งวิ่งเร็ว)
    delay(300);
}




pwm// กำหนดขาใช้งาน
const int motorPin1 = 26; // ขาควบคุมทิศทาง (ถ้ามี)
const int motorPin2 = 27; // ขาควบคุมทิศทาง (ถ้ามี)
const int enablePin = 14; // ขา PWM ที่ต่อเข้า Driver

// ตั้งค่า PWM
const int freq = 5000;    // ความถี่ 5kHz
const int resolution = 8; // ความละเอียด 8 bit (0-255)

void setup() {
  pinMode(motorPin1, OUTPUT);
  pinMode(motorPin2, OUTPUT);
  
  // ตั้งค่าขา PWM
  ledcAttach(enablePin, freq, resolution); 

  // กำหนดทิศทางให้มอเตอร์หมุนไปข้างหน้า
  digitalWrite(motorPin1, HIGH);
  digitalWrite(motorPin2, LOW);
}

void loop() {
  // ค่อยๆ เร่งความเร็ว
  for (int speed = 0; speed <= 255; speed++) {
    ledcWrite(enablePin, speed);
    delay(20);
  }

  // คงความเร็วสูงสุดไว้ 2 วินาที
  delay(2000);

  // ค่อยๆ ลดความเร็ว
  for (int speed = 255; speed >= 0; speed--) {
    ledcWrite(enablePin, speed);
    delay(20);
  }
}


